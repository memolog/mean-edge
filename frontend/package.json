{
  "name": "meanedge-frontend",
  "version": "0.3.0",
  "description": "This is my personal sandbox to use the cutting-edge features around MEAN",
  "repository": {
    "type": "git",
    "url": "https://github.com/memolog/mean-edge"
  },
  "scripts": {
    "postinstall": "npm run copy && tsd install",
    "copy": "cp ./node_modules/angular2/bundles/angular2-polyfills.js ../nginx/static/js/",
    "sass": "node-sass src/scss --output src/css",
    "cleancss": "cleancss src/css/app.css --output ../nginx/static/css/app.css",
    "build": "npm run buildCSS && npm run buildJS",
    "buildCSS": "npm run sass && npm run cleancss",
    "buildJS": "npm run tsc && npm run babel && npm run webpack && npm run uglifyjs",
    "dev": "watch \"npm run buildJS\" src/ts --wait 5 & watch \"npm run buildCSS\" src/scss --wait 5 & lite-server -c ./lite-server.config.js",
    "tsc": "tsc",
    "babel": "babel ./src/es6 --out-dir ./src/es2015-webpack",
    "webpack": "webpack",
    "uglifyjs": "find src/bundle -name '*.js' | xargs uglifyjs --compress --output ../nginx/static/js/app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typings": "typings"
  },
  "author": "Yutaka Yamaguchi",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^2.0.0-rc.1",
    "@angular/compiler": "^2.0.0-rc.1",
    "@angular/core": "^2.0.0-rc.1",
    "@angular/platform-browser": "^2.0.0-rc.1",
    "@angular/platform-browser-dynamic": "^2.0.0-rc.1",
    "@angular/router": "^2.0.0-rc.1",
    "bootstrap": "^4.0.0-alpha.2",
    "es6-shim": "^0.35.0",
    "reflect-metadata": "0.1.2",
    "rxjs": "^5.0.0-beta.6",
    "zone.js": "^0.6.12"
  },
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-preset-es2015-webpack": "^6.4.1",
    "clean-css": "^3.4.12",
    "lite-server": "^2.2.0",
    "node-sass": "^3.7.0",
    "tsd": "^0.6.5",
    "typescript": "^1.8.10",
    "typings": "^0.8.1",
    "uglify-js": "^2.6.2",
    "watch": "^0.18.0",
    "webpack": "^2.1.0-beta.6"
  }
}
