{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "./src/es6/"
  },
  "exclude": [
    "node_modules",
    "src/bundle",
    "src/css",
    "src/es2015-webpack",
    "src/es6",
    "src/scss",
    "typings/main.d.ts",
    "typings/main"    
  ]
}